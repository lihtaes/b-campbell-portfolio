<nav class="breadcrumb">
  <%= link_to "Home", root_path, class: 'breadcrumb-item animsition-link' %>
  <%= link_to @blog.topic.title, "/topics/#{@blog.topic.title}", class: 'breadcrumb-item animsition-link' %>
  <span class="breadcrumb-item active"><%= @blog.title %></span>
  
  <% if logged_in?(:site_admin)%>
  <span class="pull-right">       
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: "animsition-link" %>
    <%= link_to fa_icon('trash'), @blog, method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} %>   
  </span>
  <% end %>

</nav>