<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
   <% blog.errors.full_messages.each do |error| %>
   <%= alert_generator error %>
  <% end %>
<% end %>

<fieldset class="form-group <%=action_name%>-form-group"> 
    <%= f.label :topic_id %><br>
    <%= f.label :topic_id, "Development", :value => "1", class: "blog-radio" %>
    <div class="form-check <%=action_name%>-form-check">
      <%= f.radio_button :topic_id, "1", class: "form-check-input" %> 
    </div>
    <%= f.label :topic_id, "Debugging", :value => "2", class: "blog-radio" %>
    <div class="form-check <%=action_name%>-form-check">
      <%= f.radio_button :topic_id, "2", class: "form-check-input" %>  
    </div>      
    <%= f.label :topic_id, "Best Practices", :value => "3", class: "blog-radio" %>
    <div class="form-check <%=action_name%>-form-check">
      <%= f.radio_button :topic_id, "3", class: "form-check-input" %> 
    </div>    
    <%= f.label :topic_id, "General Thoughts", :value => "4", class: "blog-radio" %>
    <div class="form-check <%=action_name%>-form-check">
      <%= f.radio_button :topic_id, "4", class: "form-check-input" %>  
    </div>          
    <%= f.label :topic_id, "Live to Ride", :value => "5", class: "blog-radio" %>
    <div class="form-check <%=action_name%>-form-check">
      <%= f.radio_button :topic_id, "5", class: "form-check-input" %>  
    </div>      
</fieldset>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control', rows: 12 %>
</div>

<fieldset class="form-group <%=action_name%>-form-group"> 
  <%= f.label :status %><br>
  <%= f.label :status, "Draft", :value => "draft", class: "blog-radio" %>
  <div class="form-check <%=action_name%>-form-check">
    <%= f.radio_button :status, "draft", class: "form-check-input" %> 
  </div> 
  <%= f.label :status, "Published", :value => "published", class: "blog-radio" %>
  <div class="form-check <%=action_name%>-form-check">
    <%= f.radio_button :status, "published", class: "form-check-input" %> 
  </div>
</fieldset>

<div class="form-group">
  <%= f.submit 'Submit Blog Post', class: 'btn btn-primary' %>
</div>
<% end %>



