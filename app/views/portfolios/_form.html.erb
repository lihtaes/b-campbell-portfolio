<%= form_for(@portfolio_item) do |f| %>
    <% if @portfolio_item.errors.any? %>
      <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <%end%>

   <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', rows: 12 %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: 'form-control', rows: 12 %>
  </div>  

  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control', rows: 12 %>
  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload a main image file <%= f.file_field :main_image, style: 'display:none' %>
    </label>

  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none' %>
    </label>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 12 %>
  </div>
    <hr>
  <h3>Technolgies Used:</h3>

  <div>
    <%= f.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>      
    <% end %>
    <div>
      <%= link_to_add_association 'Add Technolgy', f, :technologies %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit Portfolio Item', class: 'btn btn-outline-secondary'%>
  </div>
<% end %>


