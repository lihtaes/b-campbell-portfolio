<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag 'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="keywords" content="<%= @seo_keywords %>"/>

  </head>
  <body>
    <div class="animsition">
        <%= render 'shared/shared_nav' %>
        
        <%= render 'shared/portfolio_masthead'%>

        <%= yield %>

        <!-- start footer -->
        <%= render 'shared/portfolio_footer' %>
        <!-- end footer -->
        
        <%= alerts %>

        <%= source_helper("application") %>
    </div>
  </body>
</html>





































